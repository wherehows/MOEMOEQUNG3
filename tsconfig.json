{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["dom", "ES2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
